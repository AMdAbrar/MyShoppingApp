@model IEnumerable<MyShoppingApp.Models.Product>
 @* @model MyShoppingApp.Models.Product  *@
<a asp-controller="Product" asp-action="AddProduct">back to AddProduct</a>

<h1>my Product</h1>

	<table class="table table-bordered table-st">
		<thead>
			<tr>
				<th>
					ID
				</th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
			<th>
				Categories
			</th>
			<th>Edit</th>
			<th>Delete</th>

			</tr>
		</thead>
		<tbody>
			 @foreach(var item in Model){ 
				<tr>
					<td>
						@item.Id
					</td>
				<td>
					@item.Name
				</td>
				<td>
					@item.Description	
				</td>
				<td>@item.Categories</td>
				<td><a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id">edit</a></td>
				<td><a asp-action="DeleteProduct" asp-route-id="@item.Id">delete</a></td>

				</tr>
			}
		</tbody>
		
	</table>

